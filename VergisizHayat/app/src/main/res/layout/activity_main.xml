<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD6767"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:text="VERGİSİZ HAYAT UYGULAMASINA"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="381dp"
        android:layout_height="94dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="41dp"
        android:text="ARABANIZIN TELEFONUNUZUN BİLGİSAYARINIZIN VE AYAKKABINIZIN VERGİSİZ FİYATINI ÖĞRENMEK İÇİN YUKARIDA ÖĞRENMEK İSTEDİĞİNİZ ŞEYİN VERGİSİZ FİYATINI ÖĞRENEBİLİRSİN"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ayakkabı" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:text="HOŞGELDİNİZ"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/car"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintEnd_toStartOf="@+id/phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phone"
        app:srcCompat="@drawable/car" />

    <ImageView
        android:id="@+id/phone"
        android:layout_width="164dp"
        android:layout_height="129dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/ayakkabı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/car"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/phone" />

    <ImageView
        android:id="@+id/ayakkabı"
        android:layout_width="162dp"
        android:layout_height="128dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pc"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        app:srcCompat="@drawable/shoes" />

    <ImageView
        android:id="@+id/pc"
        android:layout_width="0dp"
        android:layout_height="124dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintEnd_toStartOf="@+id/ayakkabı"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ayakkabı"
        app:srcCompat="@drawable/pc" />

</androidx.constraintlayout.widget.ConstraintLayout>